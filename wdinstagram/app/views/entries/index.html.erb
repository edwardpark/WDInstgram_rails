<% @entries.each do |entry| %>
  <div class="entry">
    <div class="entry-header">
      <span><span class="entry-posted-by">Posted by&nbsp;</span><%= entry.author %></span>
      <span><%= entry.date_taken %></span>
    </div>
    <a href="/entries/<%= entry.id %>">
      <img class="entry-photo" src="<%= entry.photo_url %>">
    </a>
    <div class="entry-edit-delete">
      <%= link_to "Edit", edit_entry_path(entry)%>
      <!-- confim with matt about why this suddenly worked? -->


      <!-- delete -->
      <%= link_to 'Delete This Photo!', entry_path(entry),
          method: :delete %>
      </form>
    </div>
  </div>
<% end %>
